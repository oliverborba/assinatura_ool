<mjml>
  <mj-head>
    <mj-font name="Montserrat" href="https://fonts.googleapis.com/css?family=Montserrat:400,700" />
    
    <mj-attributes>
      <!-- Configurações gerais -->
      <mj-all font-family="Montserrat, Arial, sans-serif" />
      <mj-text padding="0" />
      <mj-image padding="0" />
      
      <!-- Classes personalizadas -->
      <mj-class name="name-text" font-size="14px" font-weight="700" color="#000000" />
      <mj-class name="designation-text" font-size="12px" font-weight="400" color="#7b7b7b" />
      <mj-class name="degree-small" font-size="11px" font-weight="400" color="#7b7b7b" line-height="1.1" />
      <mj-class name="contact-text" font-size="11px" font-weight="400" color="#7b7b7b" text-decoration="none" />
      <mj-class name="tagline-text" font-size="11px" font-weight="400" color="#7b7b7b" />
    </mj-attributes>

    <mj-style inline="inline">
      .name-text { white-space: nowrap !important; }
      .designation-text { white-space: nowrap !important; }
      .degree-small { white-space: nowrap !important; }
      .contact-text { white-space: nowrap !important; }
      .tagline-text { white-space: nowrap !important; }
      
      /* Links sem decoração */
      a { color: inherit !important; text-decoration: none !important; }
      
      /* CONFIGURAÇÕES DE PADDING - FACILMENTE AJUSTÁVEIS */
      
      /* Espaçamento entre ícones de contato e texto */
      .contact-icon-spacing { padding-right: 2px !important; }
      
      /* Espaçamento entre ícones de redes sociais */
      .social-icon-spacing { padding-right: 5px !important; }
      
      /* Espaçamento entre certificados */
      .certificate-spacing { padding-right: 6px !important; }
      
      /* Espaçamento do LinkedIn no nome */
      .linkedin-name-spacing { padding-right: 8px !important; }
      
      /* CONFIGURAÇÕES DE POSICIONAMENTO - FACILMENTE AJUSTÁVEIS */
      
      /* Posicionamento da tabela LinkedIn + Nome Wagner */
      .linkedin-name-table { 
        text-align: right !important; 
        margin-left: auto !important;
        margin-right: 0 !important;
      }
      
      /* Posicionamento individual do ícone LinkedIn Wagner */
      .linkedin-wagner-position { 
        vertical-align: middle !important;
        text-align: center !important;
      }
      
      /* Posicionamento da tabela de redes sociais */
      .social-media-table { 
        text-align: left !important;
        margin-left: 0 !important;
        margin-right: auto !important;
      }
      
      /* Posicionamento individual dos ícones de redes sociais */
      .social-icon-position { 
        vertical-align: middle !important;
        text-align: center !important;
      }
      
      /* Ajustes responsivos específicos */
      @media only screen and (max-width:480px) {
        .hide-mobile { display: none !important; }
        .mobile-center { text-align: center !important; }
        .mobile-left { text-align: left !important; }
        .mobile-block { display: block !important; width: 100% !important; }
        
        /* Posicionamento mobile */
        .linkedin-name-table { text-align: left !important; }
        .social-media-table { text-align: left !important; }
        
        /* Certificados responsivos */
        .certificados-mobile img {
          max-width: 48vw !important;
          height: auto !important;
          display: inline-block !important;
        }
      }
    </mj-style>
  </mj-head>

  <mj-body background-color="#ffffff" width="650px">
    <mj-section padding="0">
      
      <!-- COLUNA ESQUERDA: Foto + Nome + Cargos + LinkedIn -->
      <mj-column width="35%" padding="15px 0 15px 0">
        
        <!-- Foto do usuário -->
        <mj-image 
          src="https://previewengine-accl.zoho.com/image/WD/r6tjlb579ccb6a0224808834e2918d834f7ff?version=1.0&width=2046&height=1536" 
          alt="Wagner Dias" 
          width="130px" 
          align="right"
          padding-right="25px"
        />
        
        <!-- Nome com LinkedIn -->
        <mj-table padding="10px 0" align="right" css-class="linkedin-name-table">
          <tr>
            <td class="linkedin-name-spacing linkedin-wagner-position">
              <a href="https://www.linkedin.com/in/wagner-obrasonline/" style="padding-left: 10px;" target="_blank">
                <img src="https://previewengine-accl.zoho.com/image/WD/600232bd895346aab4e1db85a2a49259eecc2?version=1.0&width=2046&height=1536" 
                     width="22" alt="LinkedIn Wagner" style="vertical-align: middle; border: 0;" />
              </a>
            </td>
            <td style="vertical-align: middle; padding-right: 020px;">
              <span class="name-text" style="font-size: 15px;"><strong>Wagner Dias</strong></span>
            </td>
          </tr>
        </mj-table>
        
        <!-- Cargo Principal -->
        <mj-text 
          mj-class="designation-text" 
          align="right" 
          padding-bottom="005px"
          padding-right="20px"
        >
          Diretor Comercial & CMO

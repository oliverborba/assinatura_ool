        </mj-table>
        
        <!-- Website -->
        <mj-table padding="0 0 5px 0">
          <tr>
            <td style="vertical-align: middle;" class="contact-icon-spacing">
              <a href="https://www.obrasonline.com.br" target="_blank">
                <img src="https://previewengine-accl.zoho.com/image/WD/vi3n0d0f567bb627747ed99f42a3d4db0b340?version=1.0&width=2046&height=1536" 
                     width="20" alt="Site" style="border: 0;" />
              </a>
            </td>
            <td style="vertical-align: middle;">
              <a href="https://www.obrasonline.com.br" target="_blank">
